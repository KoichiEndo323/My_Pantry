<div class="container">
  <div class="row">
    <div class="mx-auto col-10 col-ms-10 col-lg-8 col-xl-6">
    <h2>新規登録</h2>
    <%= form_with(model: :resource, scope: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>


      <div class="field">
        <%= f.label :ニックネーム %><br>
        <%= f.text_field :nickname %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上で入力して下さい)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :パスワード確認 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "登録する",class: "btn btn-outline-primary" %>
      </div>
    <% end %>

    <%= render "public/shared/links" %>
